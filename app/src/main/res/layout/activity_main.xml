<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#471B3F"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonEquals"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="644dp"
        android:text="="
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAC"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="644dp"
        android:text="AC"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonZero"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDeleate"
        style="@style/MyButtonStyle"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:text="Delete"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textCalculateView" />

    <TextView
        android:id="@+id/textCalculateView"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="190dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPlus"
        style="@style/MyButtonStyle"
        android:layout_width="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="250dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMinus"
        style="@style/MyButtonStyle"
        android:layout_width="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="250dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonPlus"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMultiplication"
        style="@style/MyButtonStyle"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="250dp"
        android:text="x"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonMinus"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDivision"
        style="@style/MyButtonStyle"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="250dp"
        android:text="/"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonMultiplication"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOne"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="350dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTwo"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonOne"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonThree"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="350dp"
        android:text="3"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFoure"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="450dp"
        android:text="4"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFive"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="450dp"
        android:text="5"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonOne"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSix"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="450dp"
        android:text="6"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSeven"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="550dp"
        android:text="7"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEach"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="550dp"
        android:text="8"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonOne"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNine"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="550dp"
        android:text="9"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonZero"
        style="@style/MyButtonStyle"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="644dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonEquals"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>